        <item name="android:topDark">@color/background_dialog_dark</item>
    </style>

    <style name="BaseTheme.HeaderText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTheme.TorrentInfoText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="BaseTheme.Toolbar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="BaseTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/action_mode</item>
        <item name="android:titleTextStyle">@color/text_primary_inverse</item>
    </style>

    <style name="BaseTheme.EmptyView" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.MorphButton" parent="@android:style/Widget.Holo.Button.Small">
        <item name="vc_startDrawable">@null</item>
        <item name="vc_endDrawable">@null</item>
        <item name="vc_autoStartAnimation">false</item>
    </style>

    <style name="BaseTheme.Settings" parent="BaseTheme">
        <item name="android:layout">@layout/fragment_custom_preference</item>
    </style>

    <style name="BaseTheme.Settings.Dark" parent="BaseTheme.Dark">
        <item name="android:layout">@layout/fragment_custom_preference</item>
    </style>

    <style name="BaseTheme.Settings.Black" parent="BaseTheme.Black">
        <item name="android:layout">@layout/fragment_custom_preference</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.AppCompat.Translucent.Dark" parent="BaseTheme.Dark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.AppCompat.Translucent.Black" parent="Theme.AppCompat.Translucent.Dark"></style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@drawable/popup_menu_light</item>
    </style>

    <style name="PopupMenu_Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/popup_menu_dark</item>
    </style>


    <!--Day Mode-->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#1a73e8</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="actionBarTheme">@style/AppTheme.NoActionBar</item>
        <item name="buttonStyle">@style/day_button</item>
        <item name="android:buttonStyle">@style/day_button</item>
        <item name="alertDialogTheme">@style/day_dialog</item>
        <item name="android:alertDialogTheme">@style/day_dialog</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorControlNormal">@color/black_overlay</item>
        <item name="android:thumb">@drawable/pro_thumb</item>
