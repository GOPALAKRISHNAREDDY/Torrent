        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:popupMenuStyle">@style/PopupMenu_Dark</item>
        <item name="popupMenuStyle">@style/PopupMenu_Dark</item>
        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog.Dark</item>
        <item name="alertDialogTheme">@style/BaseTheme.Dialog.Dark</item>
        <item name="divider">@drawable/table_mode_divider_dark</item>
        <item name="defaultRectRipple">@drawable/default_rect_ripple_dark</item>
        <item name="defaultRoundRipple">@drawable/default_round_ripple_dark</item>
        <item name="defaultSelectRect">@drawable/default_select_rect_dark</item>
        <item name="curOpenTorrentIndicator">@color/cur_open_torrent_indicator_dark</item>
